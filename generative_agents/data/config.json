{
    "agent": {
        "percept": {
            "mode": "box",
            "vision_r": 8,
            "att_bandwidth": 8
        },
        "schedule": {
            "max_try": 5,
            "diversity": 5
        },
        "think": {
            "llm": {
                "provider": "hybrid",
                "model": "openai-large",
                "base_url": "https://text.pollinations.ai",
                "api_key": ""
            },
            "interval": 1000,
            "poignancy_max": 150
        },
        "chat_iter": 4,
        "associate": {
            "embedding": {
                "provider": "hugging_face",
                "model": "sentence-transformers/all-MiniLM-L6-v2"
            },
            "retention": 8
        }
    }
}
